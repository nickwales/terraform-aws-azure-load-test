apiVersion: v1
kind: ServiceAccount
metadata:
  name:   fortio-server-small
  namespace: fortio-consul
---
apiVersion: v1
kind: Service
metadata:
  name:   fortio-server-small
  namespace: fortio-consul
spec:
  selector:
    app:   fortio-server-small
  ports:
  - name: http
    port: 8080
    targetPort: 8080
  - name: grpc
    port: 8079
    targetPort: 8079
---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: fortio-consul
  labels:
    app:   fortio-server-small
  name:   fortio-server-small
spec:
  replicas: 1
  selector:
    matchLabels:
      app:   fortio-server-small
  template:
    metadata:
      namespace: fortio-consul
      annotations:
        'consul.hashicorp.com/connect-inject': 'true'
        'consul.hashicorp.com/transparent-proxy': 'true'
        'consul.hashicorp.com/sidecar-proxy-cpu-limit': '150m' # 35% of a CPU
        'consul.hashicorp.com/sidecar-proxy-cpu-request': '150m'
        'consul.hashicorp.com/sidecar-proxy-memory-limit': '75Mi'
        'consul.hashicorp.com/sidecar-proxy-memory-request': '75Mi'        
      labels:
        app:   fortio-server-small
    spec:
      containers:
      - name:   fortio-server-small
        image: fortio/fortio:latest_release
        env:       
        ports:
        - containerPort: 8080
          name: http-fortio
        - containerPort: 8079
          name: grpc-ping        
      serviceAccountName:   fortio-server-small
      nodeSelector:
        nodegroup: services